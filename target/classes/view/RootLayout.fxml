<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="astrolabe31.runningfx.controller.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%menu.file">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleNew" text="%menu.new">
                     <accelerator>
                        <KeyCodeCombination alt="ANY" code="ENTER" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="%menu.open" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="%menu.save" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="%menu.saveas" />
                  <MenuItem mnemonicParsing="false" text="%menu.exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%menu.statistic">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleShowBirthdayStatistics" text="%menu.statistic.show" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%menu.help">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="%menu.aproposde" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
